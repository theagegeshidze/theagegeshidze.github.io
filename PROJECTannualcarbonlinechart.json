{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description":
  "title": {
    "text": "Global Carbon Emissions",
    "subtitle": "Total carbon emissions from 1750-2021 by entity, from fossil fuels and industry. Source: ourworldindata.org",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/theagegeshidze/theagegeshidze.github.io/main/project1.csv"
  },
  "height": 300,
  "width": 800,
  "background": null,
  "config": {"style": {"cell": {"stroke": "transparent"}}},
  "mark": "line",
  "selection": {
    "Type": {
      "type": "single",
      "fields": ["Entity"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia (excl. China and India)",
          "China",
          "Europe (excl. EU-27)",
          "European Union (27)",
          "India",
          "North America (excl. USA)",
          "South America",
          "United States"
        ],
        "name": "Selector"
      }
    }
  },
  "transform": [{"filter": {"selection": "Type"}}],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "",
      "axis": {"grid": false}
    },
    "y": {
      "field": "Annual CO2 Emissions",
      "type": "quantitative",
      "scale": {"domain": [0, 8000000000]},
      "title": "",
      "axis": {"grid": true},
      "sort": []
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "legend": {"orient": "top-right", "columns": 2},
      "sort": [],
      "scale": {"scheme": "darkmulti"}
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {
        "field": "Annual CO2 Emissions",
        "type": "quantitative",
        "title": "Annual Emissions"
      },
      {"field": "Entity", "type": "nominal", "title": "Entity"}
    ]
  }
}
